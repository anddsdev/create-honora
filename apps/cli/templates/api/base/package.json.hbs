{ 
  "name": "{{projectName}}", 
  "version": "0.0.1", 
  "type": "module", 
  "scripts": {
{{#if (eq runtime "node")}}
    "dev": "tsx watch src/index.ts", 
    "build": "tsx build src/index.ts --outdir=dist", 
    "start": "node dist/index.js",
{{else if (eq runtime "bun")}}
    "dev": "bun run --hot src/index.ts",
{{else if (eq runtime "deno")}}
    "dev": "deno run --watch --allow-net --allow-env src/index.ts", 
    "start": "deno run --allow-net --allow-env src/index.ts",
{{/if}}
  }, 
  "dependencies": {
{{#if (eq runtime "node")}}
  "@hono/node-server": "^1.14.2",
{{/if}}
  "hono": "^4.7.10",
{{#if (eq featureOptions.logger "pino")}}
  "pino": "^9.7.0",
{{/if}}

{{#if featureOptions.auth}}
  {{#if (eq featureOptions.auth "better-auth")}}
    "better-auth": "^1.2.8",
  {{/if}}
{{/if}}
  }, 
  "devDependencies": {
  {{#if typescript}}
    "@types/node": "^22.15.21", 
    "typescript": "^5.8.3",
  {{/if}}
  {{#if (eq runtime "node")}}
    "tsx": "^4.19.4",
  {{/if}}
  }
}