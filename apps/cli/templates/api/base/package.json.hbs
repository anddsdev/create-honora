{ 
  "name": "{{projectName}}", 
  "version": "0.0.1", 
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
{{#if (eq runtime "node")}}
{{#if typescript}}
    "dev": "tsx watch src/index.ts", 
    "build": "tsc && tsc-alias", 
    "start": "node dist/index.js"
{{else}}
    "dev": "node --watch src/index.js", 
    "start": "node dist/index.js"
{{/if}}
{{else if (eq runtime "bun")}}
    "dev": "bun run --hot src/index.ts"
{{/if}}
  }
}